<h1>Picture詳細画面</h1>

<p>投稿者: <%= @blog.user.name%></p>
<p>コメント: <%= @blog.content %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@blog.image) %>
</p>

<% unless @blog.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りにする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to "Picture一覧画面にもどる", blogs_path, class: 'btn btn-primary' %>